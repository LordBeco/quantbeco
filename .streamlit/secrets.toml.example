# =============================================================================
# STREAMLIT SECRETS CONFIGURATION (PRODUCTION)
# =============================================================================
# This file shows the structure for Streamlit Community Cloud deployment
# Copy these settings to your app's "Advanced settings" in Streamlit Cloud
# 
# IMPORTANT: Never commit the actual secrets.toml file to your repository!
# =============================================================================

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT = "production"

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Choose your AI provider: 'puter' (free), 'openrouter' (free models available), or 'openai' (paid)
AI_PROVIDER = "puter"

# =============================================================================
# OPENAI CONFIGURATION (Premium AI Provider)
# =============================================================================
# Required for OpenAI provider: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY = "your_openai_api_key_here"
OPENAI_MODEL = "gpt-4"
OPENAI_MAX_TOKENS = "2000"
OPENAI_TEMPERATURE = "0.1"

# =============================================================================
# PUTER AI CONFIGURATION (Free AI Provider)
# =============================================================================
# Puter AI is a free alternative that doesn't require an API key
PUTER_MODEL = "gpt-5-nano"
PUTER_MAX_TOKENS = "2000"
PUTER_TEMPERATURE = "0.1"

# =============================================================================
# OPENROUTER CONFIGURATION (Free Models Available)
# =============================================================================
# OpenRouter API key (REQUIRED - even for free models)
# Get your FREE API key from https://openrouter.ai/keys
OPENROUTER_API_KEY = "your_openrouter_api_key_here"
OPENROUTER_MODEL = "nex-agi/deepseek-v3.1-nex-n1:free"
OPENROUTER_MAX_TOKENS = "2000"
OPENROUTER_TEMPERATURE = "0.1"
OPENROUTER_SITE_URL = "https://your-app-name.streamlit.app"
OPENROUTER_SITE_NAME = "Trade Analyzer Pro"

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================
DEFAULT_STARTING_BALANCE = "10000"
DEFAULT_LEVERAGE = "1.0"
DEFAULT_COMMISSION = "0.0"
DEFAULT_SLIPPAGE = "0.0"

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE_MB = "2048"
DEFAULT_TIMEZONE = "UTC"

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. Copy the contents of this file (without the .example extension)
# 2. Paste into Streamlit Cloud's "Advanced settings" during deployment
# 3. Update the values with your actual API keys and configuration
# 4. Never commit the actual secrets.toml file to your repository
# 5. Use .gitignore to exclude .streamlit/secrets.toml